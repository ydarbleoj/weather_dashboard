<header class="location-header">
  <p><%= @address %></p>
</header>

<div class="weather-container">
  <div class="current-weather">
    <%= render "dashboards/forecast", forecast: @current_weather %>
  </div>

  <div class="forecast-details">
    <%= render partial: "dashboards/forecast", collection: @forecast_weather, as: :forecast %>
  </div>
</div>

<footer class="search-bar-container">
  <%= form_with url: root_path, method: :get do |form| %>
    <%= form.text_field :address, placeholder: "Enter an address", class: "search-input" %>
    <%= form.submit "Search", class: "search-button" %>
  <% end %>
</footer>
